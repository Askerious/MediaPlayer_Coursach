<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>


            <Button Grid.Column="0" Grid.Row="0" Click="LoadTrack" Width="100">
                <TextBlock>GavnoImport</TextBlock>
            </Button>
            <Button Grid.Column="1" Grid.Row="0" Click="LoadTrack" Width="100" >
                <TextBlock>GavnoImportAlbom</TextBlock>
            </Button>
            <Button Grid.Column="2" Grid.Row="0" Click="LoadTrack" Width="100" >
                <TextBlock>GavnoImportPlaylist</TextBlock>
            </Button>
        </Grid>

        <DataGrid Name="dataGrid" Grid.Column="0" Grid.Row="1" ItemsSource="{Binding tracks}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Tile}"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
                <DataGridTextColumn Header="Favorite" Binding="{Binding isFavorite}"/>
                <DataGridTextColumn Header="Path" Binding="{Binding FilePath}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Row="2" Grid.Column="0" Click="PlayMedia">
                <TextBlock>PLAYBLYAT</TextBlock>
            </Button>

            <Slider Grid.Column="1" VerticalAlignment="Center" Margin="5">
                
            </Slider>

            <Slider Grid.Column="2" Margin="5" HorizontalAlignment="Center" Orientation="Vertical">

            </Slider>
        </Grid>
    </Grid>
</Window>
