<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI" xmlns:local1="clr-namespace:Domain;assembly=Domain"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top">
            <Button Click="LoadTrack">Импорт</Button>
            <Separator/>
            <Button Click="CreatePlaylist">Создать плейлист</Button>
            <Separator/>
            <ComboBox Width="180" ItemsSource="{Binding Playlists}"
                      DisplayMemberPath="Name" SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"/>
        </ToolBar>

        <!--
        <DataGrid Name="dataGrid" Grid.Column="0" Grid.Row="1" ItemsSource="{Binding tracks}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}"/>
                <DataGridTextColumn Header="Favorite" Binding="{Binding isFavorite}"/>
                <DataGridTextColumn Header="Path" Binding="{Binding FilePath}"/>
            </DataGrid.Columns>
        </DataGrid> -->

        <ListBox Name="trackListBox" Grid.Column="0" Grid.Row="1" SelectionMode="Single"
         SelectionChanged="TrackList_SelectionChanged" Margin="5 0 0 0">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="copyMenuItem" Header="Копировать" 
                      Click="LoadTrack"/>
                    <MenuItem Name="deleteMenuItem" Header="Удалить" 
                      Click="LoadTrack"/>
                </ContextMenu>
            </ListBox.ContextMenu>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="6" Margin="2" BorderBrush="#DDD" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Width="36" Height="36" Source="{Binding Cover}" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8 0">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Artist}" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding Duration}" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="1" Grid.Column="1" Margin="5 0 5 0" Background="#f0f0f0" >
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Name="nowPlayingCover" Width="200" Height="200"
                       Source="/Resources/default-cover.png" Margin="0 0 0 100"/>
                <TextBlock Name="nowPlayingTitle" Text=""
                          FontWeight="Bold" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Name="nowPlayingArtist" Text="" 
                          FontSize="12" Foreground="Gray" TextAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button Name="PlayPauseButton" Grid.Row="2" Grid.Column="0" Click="PlayMedia" Margin="5" Content="Play"/>


            <Slider Name = "PositionSlider"
                    Minimum="0"
                    Maximum="{Binding Duration}"
                    Value="{Binding Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsMoveToPointEnabled="True"
                Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <TextBlock Grid.Row="2" Grid.Column="2" Text="Volume" HorizontalAlignment="Center" Margin="0 2 0 0"/>
            <Slider Name="VolumeSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="{Binding VolumePercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Grid.Column="2" Margin="5 0 2 0" VerticalAlignment="Center" Orientation="Horizontal" />
        </Grid>
    </Grid>
</Window>
