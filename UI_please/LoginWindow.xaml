<Window x:Class="UI_please.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_please"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,16,0,0">
            <TextBlock Text="Имя пользователя" />
            <TextBox x:Name="UsernameBox" Height="28" MinWidth="260" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBlock Text="Пароль" />
            <PasswordBox x:Name="PasswordBox" Height="28" MinWidth="260" />
        </StackPanel>

        <TextBlock x:Name="MessageText" Grid.Row="3" Foreground="DarkRed" TextWrapping="Wrap" Margin="0,12,0,0"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="RegisterButton" Content="Регистрация" Width="100" Margin="0,0,8,0" />
            <Button x:Name="LoginButton" Content="Войти" Width="100" />
        </StackPanel>
    </Grid>
</Window>
